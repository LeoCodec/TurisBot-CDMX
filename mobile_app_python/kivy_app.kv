#:import dp kivy.metrics.dp

BoxLayout:
    orientation: "vertical"
    padding: dp(10)
    spacing: dp(10)
    canvas.before:
        Color:
            rgba: app.colores["bg"]
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        text: "Tema"
        size_hint_y: None
        height: dp(45)
        background_color: app.colores["button_bg"]
        color: app.colores["button_text"]
        on_release: app.cambiar_tema()

    ScrollView:
        size_hint_y: 1
        do_scroll_x: False
        do_scroll_y: True

        Label:
            id: chat_label
            text: app.chat_history
            color: app.colores["text"]
            markup: True
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1]

    BoxLayout:
        size_hint_y: None
        height: dp(55)
        spacing: dp(10)

        TextInput:
            id: input_box
            hint_text: "Escribe tu mensaje..."
            background_color: app.colores["input_bg"]
            foreground_color: app.colores["text"]
            cursor_color: app.colores["text"]
            multiline: False

        Button:
            text: "Enviar"
            size_hint_x: 0.35
            background_color: app.colores["button_bg"]
            color: app.colores["button_text"]
            on_release: app.enviar_mensaje(input_box.text)
